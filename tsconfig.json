{
  "files": [],
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/db"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/ai"
    },
    {
      "path": "./worker"
    }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@finance-manager/types": ["./packages/types/src"],
      "@finance-manager/db": ["./packages/db/src"],
      "@finance-manager/core": ["./packages/core/src"],
      "@finance-manager/ai": ["./packages/ai/src"]
    }
  }
} 