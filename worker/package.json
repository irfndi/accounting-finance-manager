{
  "name": "@finance-manager/worker",
  "version": "1.0.0",
  "type": "module",
  "description": "Cloudflare Worker API for Corporate Finance Manager",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "build": "tsc",
    "build:prod": "wrangler deploy --dry-run --env production",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "types": "wrangler types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "migrate": "wrangler d1 migrations apply finance-manager-db --env development",
    "migrate:prod": "wrangler d1 migrations apply finance-manager-db-prod --env production"
  },
  "dependencies": {
    "@finance-manager/ai": "workspace:*",
    "@finance-manager/core": "workspace:*",
    "@finance-manager/db": "workspace:*",
    "@finance-manager/types": "workspace:*",
    "@hono/node-server": "^1.14.4",
    "drizzle-orm": "^0.44.2",
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "miniflare": "^3.0.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "finance",
    "accounting",
    "api"
  ]
}