{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "strict": true,
    "skipLibCheck": true,
    "noResolve": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2022",
      "WebWorker"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "noEmit": false,
    "types": [
      "@cloudflare/workers-types"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "worker-configuration.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "**/*.test.ts",
    "**/*.d.ts"
  ],
  "references": [
    { "path": "../packages/types" },
    { "path": "../packages/db" }
  ]
}