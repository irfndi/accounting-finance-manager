{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "strict": false,
    "skipLibCheck": true,
    "noResolve": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "WebWorker"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@finance-manager/types": ["../packages/types/dist/index"],
      "@finance-manager/types/*": ["../packages/types/dist/*"],
      "@finance-manager/db": ["../packages/db/dist/index"],
      "@finance-manager/db/*": ["../packages/db/dist/*"],
      "@finance-manager/core": ["../packages/core/dist/index"],
      "@finance-manager/core/*": ["../packages/core/dist/*"],
      "@finance-manager/ai": ["../packages/ai/dist/index"],
      "@finance-manager/ai/*": ["../packages/ai/dist/*"]
    },
    "types": ["@cloudflare/workers-types"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "worker-configuration.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}