{
  "name": "finance-manager",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Corporate Finance Manager - A comprehensive financial management application",
  "main": "./src/worker/index.ts",
  "scripts": {
    "dev": "astro dev",
    "dev:worker": "wrangler dev --local",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:worker\"",
    "build": "astro check && astro build && tsc --build",
    "build:worker": "tsc --build",
    "preview": "astro preview",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:all": "pnpm test && pnpm test:e2e",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply finance-manager-db --env development",
    "db:migrate:prod": "wrangler d1 migrations apply finance-manager-db-prod --env production",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf dist .astro node_modules/.cache",
    "tail": "wrangler tail",
    "tail:prod": "wrangler tail --env production",
    "types": "wrangler types"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.2.2",
    "@astrojs/react": "^4.3.0",
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@hono/node-server": "^1.11.1",
    "@hono/zod-validator": "^0.2.2",
    "@noble/hashes": "^1.8.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "argon2": "^0.31.2",
    "astro": "^5.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.5.1",
    "exceljs": "^4.4.0",
    "hono": "^4.5.1",
    "jspdf": "^2.5.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.517.0",
    "openai": "^4.28.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@cloudflare/vitest-pool-workers": "^0.8.43",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.8",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "better-sqlite3": "^11.10.0",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.31.1",
    "miniflare": "^4.20250617.3",
    "tailwindcss": "^4.0.0",
    "vitest": "^2.1.9",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^4.20.5",
    "oxlint": "^1.3.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "keywords": [
    "finance",
    "accounting",
    "cloudflare",
    "astro",
    "react",
    "typescript",
    "d1",
    "worker"
  ]
}