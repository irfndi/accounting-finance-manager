{
  "name": "finance-manager",
  "version": "0.1.0",
  "description": "AI-powered accounting & finance management platform built on Cloudflare Workers",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "test:ui": "pnpm -r test:ui",
    "test:core": "pnpm --filter @finance-manager/core test",
    "test:db": "pnpm --filter @finance-manager/db test",
    "test:ai": "pnpm --filter @finance-manager/ai test",
    "test:worker": "pnpm --filter @finance-manager/worker test",
    "test:coverage:all": "pnpm -r test:coverage && node scripts/merge-coverage.js",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "install:deps": "pnpm install"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^24.0.3",
    "miniflare": "^4.20250617.1",
    "oxlint": "^1.2.0",
    "playwright": "^1.53.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.20.3"
  },
  "keywords": [
    "finance",
    "accounting",
    "cloudflare-workers",
    "astro",
    "ai",
    "ocr",
    "double-entry"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/irfndi/finance-manager.git"
  },
  "bugs": {
    "url": "https://github.com/irfndi/finance-manager/issues"
  },
  "homepage": "https://github.com/irfndi/finance-manager#readme",
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}