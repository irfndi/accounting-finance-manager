{
  "name": "finance-manager",
  "version": "0.1.0",
  "description": "AI-powered accounting & finance management platform built on Cloudflare Workers",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "make dev",
    "build": "make prod/build",
    "lint": "make lint",
    "test": "make unit",
