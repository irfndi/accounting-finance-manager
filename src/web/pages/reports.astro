---
import Layout from "../layouts/Layout.astro";
import { Card } from "../components/ui/card";
---

<Layout
    title="Financial Reports - Corporate Finance Manager"
    description="Comprehensive financial reporting and analysis"
    currentPath="/reports"
>
    <div class="space-y-6">
        <!-- Page Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">
                    Financial Reports
                </h1>
                <p class="text-slate-600 mt-1">
                    Generate and analyze financial statements and reports
                </p>
            </div>
            <div class="flex items-center space-x-3">
                <select
                    class="px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
                >
                    <option>Current Month</option>
                    <option>Last Month</option>
                    <option>Current Quarter</option>
                    <option>Last Quarter</option>
                    <option>Current Year</option>
                    <option>Last Year</option>
                </select>
                <button
                    class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
                >
                    Generate Report
                </button>
            </div>
        </div>

        <!-- Report Categories -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Primary Financial Statements -->
            <Card className="p-6">
                <div class="flex items-center mb-4">
                    <div
                        class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center"
                    >
                        <svg
                            class="w-5 h-5 text-blue-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <title>Financial Statements</title>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-slate-900 ml-3">
                        Primary Statements
                    </h3>
                </div>
                <div class="space-y-3">
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Income Statement
                                </p>
                                <p class="text-sm text-slate-600">
                                    Profit & Loss report
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Balance Sheet
                                </p>
                                <p class="text-sm text-slate-600">
                                    Assets, liabilities & equity
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Cash Flow Statement
                                </p>
                                <p class="text-sm text-slate-600">
                                    Operating, investing, financing
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                </div>
            </Card>

            <!-- Management Reports -->
            <Card className="p-6">
                <div class="flex items-center mb-4">
                    <div
                        class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center"
                    >
                        <svg
                            class="w-5 h-5 text-green-700"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <title>Management Reports</title>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-slate-900 ml-3">
                        Management Reports
                    </h3>
                </div>
                <div class="space-y-3">
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Budget vs Actual
                                </p>
                                <p class="text-sm text-slate-600">
                                    Performance analysis
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Department Analysis
                                </p>
                                <p class="text-sm text-slate-600">
                                    Cost center performance
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Variance Analysis
                                </p>
                                <p class="text-sm text-slate-600">
                                    Budget variance breakdown
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                </div>
            </Card>

            <!-- Compliance Reports -->
            <Card className="p-6">
                <div class="flex items-center mb-4">
                    <div
                        class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center"
                    >
                        <svg
                            class="w-5 h-5 text-purple-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <title>Compliance Reports</title>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-slate-900 ml-3">
                        Compliance Reports
                    </h3>
                </div>
                <div class="space-y-3">
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Tax Preparation
                                </p>
                                <p class="text-sm text-slate-600">
                                    Tax filing reports
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Audit Trail
                                </p>
                                <p class="text-sm text-slate-600">
                                    Transaction audit logs
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                    <button
                        class="w-full text-left p-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition-colors"
                    >
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium text-slate-900">
                                    Regulatory Filings
                                </p>
                                <p class="text-sm text-slate-600">
                                    Required submissions
                                </p>
                            </div>
                            <svg
                                class="w-4 h-4 text-slate-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </button>
                </div>
            </Card>
        </div>

        <!-- Recent Reports -->
        <Card className="p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-slate-900">
                    Recent Reports
                </h2>
                <button
                    class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                    >View All</button
                >
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-slate-200">
                            <th
                                class="text-left py-3 px-4 font-medium text-slate-600"
                                >Report Name</th
                            >
                            <th
                                class="text-left py-3 px-4 font-medium text-slate-600"
                                >Type</th
                            >
                            <th
                                class="text-left py-3 px-4 font-medium text-slate-600"
                                >Period</th
                            >
                            <th
                                class="text-left py-3 px-4 font-medium text-slate-600"
                                >Generated</th
                            >
                            <th
                                class="text-left py-3 px-4 font-medium text-slate-600"
                                >Status</th
                            >
                            <th
                                class="text-right py-3 px-4 font-medium text-slate-600"
                                >Actions</th
                            >
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-slate-100 hover:bg-slate-50">
                            <td class="py-3 px-4 font-medium"
                                >December 2024 P&L</td
                            >
                            <td class="py-3 px-4">Income Statement</td>
                            <td class="py-3 px-4">Dec 2024</td>
                            <td class="py-3 px-4 text-sm text-slate-600"
                                >2 hours ago</td
                            >
                            <td class="py-3 px-4">
                                <span
                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                                >
                                    Ready
                                </span>
                            </td>
                            <td class="py-3 px-4 text-right">
                                <div
                                    class="flex items-center justify-end space-x-2"
                                >
                                    <button
                                        class="text-blue-600 hover:text-blue-800 text-sm"
                                        >View</button
                                    >
                                    <button
                                        class="text-blue-600 hover:text-blue-800 text-sm"
                                        >Download</button
                                    >
                                </div>
                            </td>
                        </tr>
                        <tr class="border-b border-slate-100 hover:bg-slate-50">
                            <td class="py-3 px-4 font-medium"
                                >Q4 2024 Balance Sheet</td
                            >
                            <td class="py-3 px-4">Balance Sheet</td>
                            <td class="py-3 px-4">Q4 2024</td>
                            <td class="py-3 px-4 text-sm text-slate-600"
                                >1 day ago</td
                            >
                            <td class="py-3 px-4">
                                <span
                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"
                                >
                                    Processing
                                </span>
                            </td>
                            <td class="py-3 px-4 text-right">
                                <div
                                    class="flex items-center justify-end space-x-2"
                                >
                                    <button
                                        class="text-slate-400 text-sm cursor-not-allowed"
                                        >View</button
                                    >
                                    <button
                                        class="text-slate-400 text-sm cursor-not-allowed"
                                        >Download</button
                                    >
                                </div>
                            </td>
                        </tr>
                        <tr class="border-b border-slate-100 hover:bg-slate-50">
                            <td class="py-3 px-4 font-medium"
                                >Cash Flow Analysis</td
                            >
                            <td class="py-3 px-4">Cash Flow Statement</td>
                            <td class="py-3 px-4">Dec 2024</td>
                            <td class="py-3 px-4 text-sm text-slate-600"
                                >3 days ago</td
                            >
                            <td class="py-3 px-4">
                                <span
                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                                >
                                    Ready
                                </span>
                            </td>
                            <td class="py-3 px-4 text-right">
                                <div
                                    class="flex items-center justify-end space-x-2"
                                >
                                    <button
                                        class="text-blue-600 hover:text-blue-800 text-sm"
                                        >View</button
                                    >
                                    <button
                                        class="text-blue-600 hover:text-blue-800 text-sm"
                                        >Download</button
                                    >
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </Card>
    </div>
</Layout>

